<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<?import fr.blazanome.routeplanner.view.Map?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.blazanome.routeplanner.view.FxController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>


    <left>

        <VBox styleClass="left">

            <!-- Load Map -->
            <HBox styleClass="group">
                <Button text="Load a map" onAction="#loadMap"/>
                <Button text="Hard coded map" onAction="#loadHardCodedMap"/>
            </HBox>

            <!-- Controls -->
            <HBox styleClass="group">
                <Button text="Undo" onAction="#undo"/>
                <Button text="Redo" onAction="#redo"/>
                <Button text="Load"/>
                <Button text="Save"/>
            </HBox>

            <!-- Couriers -->
            <VBox styleClass="group">
                <TextFlow>
                    <Text text="Number of couriers : "/>
                    <Text text="0" fx:id="countCourier"/>
                </TextFlow>
                <HBox>
                    <Button text="Add"/>
                    <Button text="Remove"/>
                </HBox>
            </VBox>

            <!-- Courier -->
            <VBox styleClass="group">
                <Text text="Courier tour"/>
                <ComboBox fx:id="deliveryCourier"/>
                <TableView>
                    <columns>
                        <TableColumn text="Coordinates"/>
                        <TableColumn text="Time frame"/>
                    </columns>
                </TableView>

                <Text text="New delivery"/>
                <GridPane hgap="10" vgap="10">
                    <Text text="At" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="deliveryTime" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Text text="To" GridPane.rowIndex="2"/>
                    <Label fx:id="deliveryIntersection" text="coords" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
                <Button text="Add delivery" fx:id="addDelivery" disable="true" onAction="#addDelivery"/>

            </VBox>

        </VBox>
    </left>

    <center>
        <Map fx:id="map"/>
    </center>

</BorderPane>
