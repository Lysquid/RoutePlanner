<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<?import fr.blazanome.routeplanner.view.Map?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.blazanome.routeplanner.view.Window"
            styleClass="root">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <top>
        <MenuBar>
            <Menu text="Map">
                <MenuItem text="Load"/>
            </Menu>
            <Menu text="Tour">
                <MenuItem text="Save"/>
                <MenuItem text="Load"/>
            </Menu>
        </MenuBar>
    </top>


    <left>

        <VBox styleClass="left">

            <!-- Load Map -->
            <ToolBar styleClass="group,spacing">
                <Button text="Load a map" onAction="#handleLoadMap"/>
                <Button text="Hard coded map" onAction="#handleLoadMapHardCoded"/>
            </ToolBar>

            <!-- Controls Box -->
            <ToolBar styleClass="group,spacing">
                <Button text="Undo" onAction="#handleUndo"/>
                <Button text="Redo" onAction="#handleRedo"/>
                <Separator/>
                <Button text="Load"/>
                <Button text="Save"/>
            </ToolBar>

            <!-- Courier Box -->
            <VBox styleClass="group,spacing">
                <TextFlow>
                    <Text text="Number of couriers : "/>
                    <Text text="0" fx:id="countCourier"/>
                </TextFlow>
                <HBox styleClass="spacing">
                    <Button text="Add"/>
                    <Button text="Remove"/>
                </HBox>
            </VBox>

            <!-- Deliveries Box -->
            <VBox styleClass="group,spacing">
                <Text text="Add a delivery"/>
                <GridPane hgap="10" vgap="10">
                    <Text text="By" GridPane.rowIndex="0"/>
                    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="deliveryCourier" />
                    <Text text="At" GridPane.rowIndex="1"/>
                    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="deliveryTime" />
                    <Text text="To" GridPane.rowIndex="2"/>
                    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="deliveryIntersection" />
                </GridPane>
            </VBox>
        </VBox>
    </left>

    <center>
        <Map fx:id="map"/>
    </center>

</BorderPane>
