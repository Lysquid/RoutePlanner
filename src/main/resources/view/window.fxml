<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<?import fr.blazanome.routeplanner.view.Map?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.blazanome.routeplanner.view.FxController"
            styleClass="root">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>


    <left>

        <VBox styleClass="left">

            <!-- Load Map -->
            <ToolBar styleClass="group">
                <Button text="Load a map" onAction="#loadMap"/>
                <Button text="Hard coded map" onAction="#loadHardCodedMap"/>
            </ToolBar>

            <!-- Controls Box -->
            <HBox styleClass="group">
                <Button text="Undo" onAction="#undo"/>
                <Button text="Redo" onAction="#redo"/>
                <Button text="Load"/>
                <Button text="Save"/>
            </HBox>

            <!-- Courier Box -->
            <VBox styleClass="group">
                <TextFlow>
                    <Text text="Number of couriers : "/>
                    <Text text="0" fx:id="countCourier"/>
                </TextFlow>
                <HBox>
                    <Button text="Add"/>
                    <Button text="Remove"/>
                </HBox>
            </VBox>

            <!-- Deliveries Box -->
            <VBox styleClass="group">
                <Text text="Add a delivery"/>
                <GridPane hgap="10" vgap="10">
                    <Text text="By" GridPane.rowIndex="0"/>
                    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="deliveryCourier" />
                    <Text text="At" GridPane.rowIndex="1"/>
                    <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="deliveryTime" />
                    <Text text="To" GridPane.rowIndex="2"/>
                    <Label GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="deliveryIntersection" />
                </GridPane>
            </VBox>
        </VBox>
    </left>

    <center>
        <Map fx:id="map"/>
    </center>

</BorderPane>
